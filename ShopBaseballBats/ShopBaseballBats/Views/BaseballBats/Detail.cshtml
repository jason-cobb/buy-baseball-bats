@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Baseball Bat Shop";
    //ViewData["Title"] = "Home Page";
   
}

        <h2>@ViewBag.BatBrand</h2>
        <h2>Description: @Html.Raw(ViewBag.Description)</h2>
            @if (ViewBag.BatModels.Length > 0)
                {
                    <h3>Model:</h3>
                    <div>
                        <ul>
                            @foreach (var batModel in ViewBag.BatModels)
                                {   
                                    <li>@batModel, @ViewBag.BatLength/@ViewBag.BatWeight</li>
                            
                            
                                }
                        </ul>
                    </div>
                }

   