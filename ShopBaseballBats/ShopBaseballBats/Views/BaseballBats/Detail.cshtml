@model ShopBaseballBats.Models.BaseballBats
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title =  Model.DisplayText;//"Baseball Bat Shop";
    //ViewData["Title"] = "Home Page";
   
}
<h2>@Model.DisplayText</h2>
<div class="row">
    <div class="col-md-6">
        <div class="well">
            <h5><label>Bat Brand:</label> @Model.BatBrand</h5>
           
            <h5><label>Favorite:</label> @(Model.Favorite ? "Yes" : "No")</h5>
            @if (Model.BatModels.Length > 0)
                {
                    <h5>Models:</h5>
                    <div>
                        <ul>
                            @foreach (var batModel in Model.BatModels)
                                {   
                                    <li>@batModel.Name: @batModel.Length/@batModel.Weight</li>
                            
                                }
                        </ul>
                    </div>
                }
            
        </div>
        <h5>Description:</h5>
        <div>@Html.Raw(Model.DescriptionHtml)</div>
        
       
    </div>
    <div class="col-md-6">
        <h5>Insert image here.</h5>
    </div>
   
</div>


        
            

   